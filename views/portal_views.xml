<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="home_menu_dashboard" model="website.menu">
        <field name="name">Home</field>
        <field name="url">/my/home</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">25</field>
    </record>

    <record id="menu_dashboard" model="website.menu">
        <field name="name">My Dashboard</field>
        <field name="url">/mydashboard/</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">10</field>
    </record>

    <template id="portal_my_home" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">

            <t t-call="portal.portal_docs_entry">
                <t t-set="url">/studentlist</t>
                <t t-set="title">Student Registration</t>
                <t t-set="placeholder_count" t-value="'student_registered_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_layout" name="Portal layout: project menu entry" inherit_id="portal.portal_breadcrumbs"
              priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'student_registration_list_view'"
                t-attf-class="breadcrumb-item #{'active ' if not student_registration_list_view else ''}">
                <a t-if="student1" t-attf-href="/studentlist?{{ keep_query() }}">Students</a>
                <t t-else="">Students</t>
            </li>
            <li t-if="student1" class="breadcrumb-item active text-truncate">
                <span t-field="student1.student_name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_student_registration_list_view" name="Student Registration Portal List View">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Hospital Appointment</t>
            </t>
            <t t-if="not student_registration1">
                <p class="text-danger">There are currently no Student Register</p>
            </t>

            <form action="/studform" method="post">
                <!-- put other forms field here if you need to pass info to controller -->
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
            <!--
            <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>-->

            <t t-if="student_registration1" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>
                            <span class='d-none d-md-inline'>id</span>
                        </th>
                        <th class="text-center">Student Name</th>
                        <th class="text-center">Phone No.</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Gender</th>
                    </tr>
                </thead>
                <t t-foreach="student_registration1" t-as="sr1">
                    <tr>
                        <td>
                            <a t-attf-href="/studentlist/{{slug(sr1)}}">
                                <t t-esc="sr1.id"/>
                            </a>
                        </td>

                        <td class="text-center">
                            <a t-attf-href="/studentlist/{{slug(sr1)}}">
                                <t t-esc="sr1.student_name"/>
                            </a>
                        </td>
                        <td class="text-center">
                            <span t-field="sr1.student_phone_no"/>
                        </td>
                        <td class="text-center">
                            <span t-field="sr1.student_email"/>
                        </td>
                        <td class="text-center">
                            <span t-field="sr1.student_gender"/>
                        </td>
                    </tr>
