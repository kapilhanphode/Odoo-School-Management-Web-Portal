            <script type="text/javascript">

                $(document).ready(function() {
        // Initially hide all student class options
        $("#studentClassOptions, #studentClassOptions11_12, #studentclgstream, #studentgraduation, #studentpostgraduation").hide();

        // Attach a change event handler to the "Admission Type" radio buttons
        $("input[name='remediation_type']").change(function() {
            // Hide all student class options
            $("#studentClassOptions, #studentClassOptions11_12, #studentclgstream, #studentgraduation, #studentpostgraduation").hide();

            // Get the value of the selected "Admission Type"
            var selectedType = $("input[name='remediation_type']:checked").val();

            // Show the corresponding student class options based on the selected "Admission Type"
            if (selectedType === "school") {
                $("#studentClassOptions").show();
            } else if (selectedType === "jr_college" || selectedType === "graduation" || selectedType === "post_graduation") {
                if (selectedType === "jr_college") {
                    $("#studentClassOptions11_12").show();
                } else if (selectedType === "graduation") {
                    $("#studentgraduation").show();
                } else if (selectedType === "post_graduation") {
                    $("#studentpostgraduation").show();
                }
                $("#studentclgstream").show();
            }
        });
    });

